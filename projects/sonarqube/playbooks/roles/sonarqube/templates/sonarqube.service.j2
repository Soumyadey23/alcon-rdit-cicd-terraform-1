[Unit]
Description=SonarQube service
After=syslog.target network.target

[Service]
Type=simple
User={{ sonarqube_user }}
Group={{ sonarqube_group }}
ExecStart={{ sonarqube_linux_script }} start
ExecStop={{ sonarqube_linux_script }} stop
ExecReload={{ sonarqube_linux_script }} restart
PIDFile={{ sonarqube_work_dir }}/bin/linux-x86-64/SonarQube.pid
LimitNOFILE={{ sonarqube_nofile }}
LimitNPROC={{ sonarqube_nproc }}
PermissionsStartOnly=true
Restart=always
SuccessExitStatus=143

[Install]
WantedBy=multi-user.target
